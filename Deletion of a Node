#include <stdio.h>
#include <stdlib.h>

// Definition of node
struct Node
{
    int data;
    struct Node *next;
};

int main()
{
    struct Node *head = NULL, *temp, *prev, *newNode;
    int n, i, key;

    // Create linked list
    printf("Enter number of nodes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++)
    {
        newNode = (struct Node *)malloc(sizeof(struct Node));
        printf("Enter data for node %d: ", i + 1);
        scanf("%d", &newNode->data);
        newNode->next = NULL;

        if (head == NULL)
        {
            head = newNode;
            temp = head;
        }
        else
        {
            temp->next = newNode;
            temp = newNode;
        }
    }

    // Input element to delete
    printf("Enter element to delete: ");
    scanf("%d", &key);

    // Deletion logic
    temp = head;

    // Case 1: Deleting first node
    if (temp != NULL && temp->data == key)
    {
        head = temp->next;
        free(temp);
    }
    else
    {
        // Case 2: Deleting middle or last node
        while (temp != NULL && temp->data != key)
        {
            prev = temp;
            temp = temp->next;
        }

        if (temp == NULL)
        {
            printf("Element not found in the list\n");
        }
        else
        {
            prev->next = temp->next;
            free(temp);
        }
    }

    // Display linked list after deletion
    printf("Linked List after deletion:\n");
    temp = head;
    while (temp != NULL)
    {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL");

    return 0;
}
