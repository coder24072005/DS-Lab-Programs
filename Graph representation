#include <stdio.h>

int main()
{
    int graph[10][10], v, e, i, j, src, dest;

    printf("Enter number of vertices: ");
    scanf("%d", &v);

    // Initialize matrix with 0
    for (i = 0; i < v; i++)
        for (j = 0; j < v; j++)
            graph[i][j] = 0;

    printf("Enter number of edges: ");
    scanf("%d", &e);

    printf("Enter edges (source destination):\n");
    for (i = 0; i < e; i++)
    {
        scanf("%d %d", &src, &dest);
        graph[src][dest] = 1;
        graph[dest][src] = 1;   // For undirected graph
    }

    printf("\nAdjacency Matrix:\n");
    for (i = 0; i < v; i++)
    {
        for (j = 0; j < v; j++)
        {
            printf("%d ", graph[i][j]);
        }
        printf("\n");
    }

    return 0;
}
