#include <stdio.h>
#define MAX 10

int graph[MAX][MAX];
int visited[MAX];
int queue[MAX];
int front = 0, rear = -1;

void bfs(int v, int start)
{
    int i;
    queue[++rear] = start;
    visited[start] = 1;

    while (front <= rear)
    {
        start = queue[front++];
        printf("%d ", start);

        for (i = 0; i < v; i++)
        {
            if (graph[start][i] == 1 && !visited[i])
            {
                queue[++rear] = i;
                visited[i] = 1;
            }
        }
    }
}

int main()
{
    int v, i, j, start;

    printf("Enter number of vertices: ");
    scanf("%d", &v);

    printf("Enter adjacency matrix:\n");
    for (i = 0; i < v; i++)
        for (j = 0; j < v; j++)
            scanf("%d", &graph[i][j]);

    for (i = 0; i < v; i++)
        visited[i] = 0;

    printf("Enter starting vertex: ");
    scanf("%d", &start);

    printf("BFS Traversal: ");
    bfs(v, start);

    return 0;
}
