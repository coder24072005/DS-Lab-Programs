#include <stdio.h>
#define MAX 10
#define INF 9999

int main()
{
    int graph[MAX][MAX], dist[MAX], visited[MAX];
    int v, i, j, source, min, u;

    printf("Enter number of vertices: ");
    scanf("%d", &v);

    printf("Enter adjacency matrix (0 if no edge):\n");
    for (i = 0; i < v; i++)
    {
        for (j = 0; j < v; j++)
        {
            scanf("%d", &graph[i][j]);
            if (graph[i][j] == 0)
                graph[i][j] = INF;
        }
    }

    printf("Enter source vertex: ");
    scanf("%d", &source);

    // Initialization
    for (i = 0; i < v; i++)
    {
        dist[i] = graph[source][i];
        visited[i] = 0;
    }

    dist[source] = 0;
    visited[source] = 1;

    // Dijkstra's Algorithm
    for (i = 1; i < v; i++)
    {
        min = INF;
        for (j = 0; j < v; j++)
        {
            if (!visited[j] && dist[j] < min)
            {
                min = dist[j];
                u = j;
            }
        }

        visited[u] = 1;

        for (j = 0; j < v; j++)
        {
            if (!visited[j] && dist[u] + graph[u][j] < dist[j])
            {
                dist[j] = dist[u] + graph[u][j];
            }
        }
    }

    // Output
    printf("\nShortest distances from source %d:\n", source);
    for (i = 0; i < v; i++)
    {
        printf("To %d = %d\n", i, dist[i]);
    }

    return 0;
}
